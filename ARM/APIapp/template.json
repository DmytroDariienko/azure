{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "subscriptionId": {
            "type": "string"
        },
        "APIname": {
            "type": "string"
        },
        "APIlocation": {
            "type": "string"
        },
        "APIhostingPlanName": {
            "type": "string"
        },
        "APIserverFarmResourceGroup": {
            "type": "string"
        },
        "APIalwaysOn": {
            "type": "bool"
        },
        "APIsku": {
            "type": "string"
        },
        "APIskuCode": {
            "type": "string"
        },
        "APIworkerSize": {
            "type": "string"
        },
        "APIworkerSizeId": {
            "type": "string"
        },
        "APInumberOfWorkers": {
            "type": "string"
        },
        "APIcurrentStack": {
            "type": "string"
        },
        "APInetFrameworkVersion": {
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('APIname')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('APIlocation')]",
            "tags": {},
            "dependsOn": [
                "microsoft.insights/components/ddaritest-app",
                "[concat('Microsoft.Web/serverfarms/', parameters('APIhostingPlanName'))]"
            ],
            "properties": {
                "name": "[parameters('APIname')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference('microsoft.insights/components/ddaritest-app', '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "XDT_MicrosoftApplicationInsights_Mode",
                            "value": "default"
                        },
                        {
                            "name": "DiagnosticServices_EXTENSION_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "APPINSIGHTS_PROFILERFEATURE_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "APPINSIGHTS_SNAPSHOTFEATURE_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "InstrumentationEngine_EXTENSION_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "SnapshotDebugger_EXTENSION_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "XDT_MicrosoftApplicationInsights_BaseExtensions",
                            "value": "disabled"
                        }
                    ],
                    "metadata": [
                        {
                            "name": "CURRENT_STACK",
                            "value": "[parameters('APIcurrentStack')]"
                        }
                    ],
                    "netFrameworkVersion": "[parameters('APInetFrameworkVersion')]",
                    "alwaysOn": "[parameters('APIalwaysOn')]"
                },
                "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', parameters('APIserverFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('APIhostingPlanName'))]",
                "clientAffinityEnabled": true
            }
        },
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('APIhostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('APIlocation')]",
            "kind": "",
            "tags": {},
            "dependsOn": [],
            "properties": {
                "name": "[parameters('APIhostingPlanName')]",
                "workerSize": "[parameters('APIworkerSize')]",
                "workerSizeId": "[parameters('APIworkerSizeId')]",
                "numberOfWorkers": "[parameters('APInumberOfWorkers')]"
            },
            "sku": {
                "Tier": "[parameters('APIsku')]",
                "Name": "[parameters('APIskuCode')]"
            }
        },
        {
            "apiVersion": "2015-05-01",
            "name": "ddaritest-app",
            "type": "microsoft.insights/components",
            "location": "centralus",
            "tags": {},
            "properties": {
                "ApplicationId": "[parameters('APIname')]",
                "Request_Source": "IbizaWebAppExtensionCreate"
            }
        }
    ]
}