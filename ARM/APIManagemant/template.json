{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "adminEmail": {
            "type": "string"
        },
        "orgName": {
            "type": "string"
        },
        "tier": {
            "type": "string"
        },
        "capacity": {
            "type": "int"
        },
        "subscriptionId": {
            "type": "string"
        },
        "APIname": {
            "type": "string"
        },
        "APIhostingPlanName": {
            "type": "string"
        },
        "APIserverFarmResourceGroup": {
            "type": "string"
        },
        "APIalwaysOn": {
            "type": "bool"
        },
        "APIsku": {
            "type": "string"
        },
        "APIskuCode": {
            "type": "string"
        },
        "APIworkerSize": {
            "type": "string"
        },
        "APIworkerSizeId": {
            "type": "string"
        },
        "APInumberOfWorkers": {
            "type": "string"
        },
        "APIcurrentStack": {
            "type": "string"
        },
        "APInetFrameworkVersion": {
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2019-01-01",
            "name": "[parameters('name')]",
            "location": "[parameters('location')]",
            "type": "Microsoft.ApiManagement/service",
            "sku": {
                "name": "[parameters('tier')]",
                "capacity": "[parameters('capacity')]"
            },
            "properties": {
                "publisherEmail": "[parameters('adminEmail')]",
                "publisherName": "[parameters('orgName')]"
            }
        },
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('APIname')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('location')]",
            "tags": {},
            "dependsOn": [
                "[concat('microsoft.insights/components/ddaritest-API-ins')]",
                "[concat('Microsoft.Web/serverfarms/', parameters('APIhostingPlanName'))]",
                "[concat('Microsoft.ApiManagement/service/', parameters('name'))]"
            ],
            "properties": {
                "name": "[parameters('APIname')]",
                "siteConfig": {
                    "ipSecurityRestrictions": [
                        {
                            "ipAddress": "[reference(parameters('name')).publicIPAddresses]",
                            "action": "Allow",
                            "tag": "Default",
                            "priority": 100,
                            "name": "IP example rule"
                        }
                    ],
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference('microsoft.insights/components/ddaritest-API-ins', '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "XDT_MicrosoftApplicationInsights_Mode",
                            "value": "default"
                        },
                        {
                            "name": "DiagnosticServices_EXTENSION_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "APPINSIGHTS_PROFILERFEATURE_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "APPINSIGHTS_SNAPSHOTFEATURE_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "InstrumentationEngine_EXTENSION_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "SnapshotDebugger_EXTENSION_VERSION",
                            "value": "disabled"
                        },
                        {
                            "name": "XDT_MicrosoftApplicationInsights_BaseExtensions",
                            "value": "disabled"
                        }
                    ],
                    "metadata": [
                        {
                            "name": "CURRENT_STACK",
                            "value": "[parameters('APIcurrentStack')]"
                        }
                    ],
                    "netFrameworkVersion": "[parameters('APInetFrameworkVersion')]",
                    "alwaysOn": "[parameters('APIalwaysOn')]"
                },
                "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', parameters('APIserverFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('APIhostingPlanName'))]",
                "clientAffinityEnabled": true
            }
        },
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('APIhostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "kind": "",
            "tags": {},
            "dependsOn": [],
            "properties": {
                "name": "[parameters('APIhostingPlanName')]",
                "workerSize": "[parameters('APIworkerSize')]",
                "workerSizeId": "[parameters('APIworkerSizeId')]",
                "numberOfWorkers": "[parameters('APInumberOfWorkers')]"
            },
            "sku": {
                "Tier": "[parameters('APIsku')]",
                "Name": "[parameters('APIskuCode')]"
            }
        },
        {
            "apiVersion": "2015-05-01",
            "name": "ddaritest-API-ins",
            "type": "microsoft.insights/components",
            "location": "centralus",
            "tags": {},
            "properties": {
                "ApplicationId": "[parameters('APIname')]",
                "Request_Source": "IbizaWebAppExtensionCreate"
            }
        }
    ],
    "outputs" : {
        "publicIPAddresses": {
            "type" : "Array",
            "value" : "[reference(parameters('name')).publicIPAddresses]"
        }
    }
}